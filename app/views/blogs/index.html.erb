<h3 style="text-align:center">TWEETS-MEMBERS</h1>
<p><%= notice%></p>
<table class="table" style="overflow:hidden; width:100%">
    <tr>
        <!-- <th>title</th> -->
        <th><em>Contents</em></th>
        <th><em>Actions</em></th>
    </tr>
    <% @blogs.each do |blog| %>
        <tr>
            <td style="width:400px;word-break: break-word;"><%= blog.id %></td>
            <td style="width:400px;word-break: break-word;"><%= blog.content %></td>
            <td><%= link_to 'See', blog_path(blog.id) %></td>
            <td><%= link_to "Edit", edit_blog_path(blog.id)%></td>
            <td><%= link_to "Delete", blog_path(blog.id), method: :delete%></td>
        </tr>
    <% end %>
</table>
<br>
<button class="btn btn-primary"><%= link_to 'New Blog path', new_blog_path%></button>